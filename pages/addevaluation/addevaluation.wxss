/* pages/addevaluation/addevaluation.wxss */
.evaluation{
	width: 100%;
	height: 550rpx;
	border-bottom:10rpx solid #f2f2f2;
}
.produce{
	width: 100%;
	height: 140rpx;
	border: 1rpx solid #f2f2f2;
	display: flex;
	padding-top: 30rpx;
}
.produce-image{
	flex: 1;
	text-align: center;
}
.produce-image image{
	width: 110rpx;
	height: 110rpx;
	border-radius: 10rpx;
}
.upload{
	flex: 3;

}

.upload-img{
	float: left;
	margin: 0 10rpx;
	text-align: center;
	position: relative
}
.image{
	width: 110rpx;
	height: 110rpx;
	border-radius: 10rpx;
}
.delimage{
	width: 40rpx;
	height: 40rpx;
	border-radius: 50%;
	position: absolute;
	top: -10rpx;
	right: -10rpx;
}
.upload-btn{
	flex: 1;
	text-align: center
}
.upload-btn image{
	width: 110rpx;
	height: 110rpx;
}


.textarea-wrp{
	width: 100%;
	border-bottom: 1rpx solid #f2f2f2;
	height: 250rpx;
	padding: 10rpx 30rpx;
	box-sizing: border-box;
}
textarea{
	width: 100%;
	font-size: 26rpx;
	
}
.evaluation-image{
	width: 80%;
	height: 120rpx;
	display: flex;
}
.evaluationdetail{
	flex: 1;
	text-align: center;
	line-height: 120rpx;
}
.detail{
	width: 60rpx;
	height: 60rpx;
	padding-top: 30rpx;
	margin-right: 10rpx;
}
.active{
	display: none
}
.evaluationdetail text{
	 line-height: 90rpx; 
	/* display: inline-block; */
	/* margin-top: 50rpx; */
	color: #a1a1a1;
	font-size: 28rpx;
}