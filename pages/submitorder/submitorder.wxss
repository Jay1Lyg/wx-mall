/* pages/submitorder/submitorder.wxss */
.addaddress{
	width: 100%;
	display: flex;
	height: 90rpx;
	border-bottom: 10rpx solid #f2f2f2;
}
.addaddress text{
	flex: 1
}
.addtext{
	color: #434343;
	font-size: 30rpx;
	line-height: 90rpx;
	margin-left: 30rpx;
}
.addda{
	color: #a1a1a1;
	line-height: 90rpx;
	text-align: right;
	margin-right: 30rpx;
	font-size: 28rpx;
}
.beizhu{
	flex: 1;
	color: #434343;
	font-size: 30rpx;
	line-height: 90rpx;
	margin-left: 30rpx;

}
.addbeizhu{
	flex: 3;
	color: #434343;
	font-size: 30rpx;
	height: 90rpx;
	margin-right: 30rpx;
}
.addbeizhu input{
	height: 90rpx;
}

.goodslist{
	width: 100%;
	height: 200rpx;
	display: flex;
	border-bottom: 1px solid #f2f2f2
}
.goodslist-sel{
	flex: 1;
	height: 200rpx;
  vertical-align: middle;
}
.goodslist-sel image{
	line-height: 200rpx;
	width: 30rpx;
	height: 30rpx;
	margin-left: 30rpx;
	margin-top: 85rpx;
}
.goodslist-image{
	flex: 2;
}
.goodslist-image image{
	width: 160rpx;
	height: 160rpx;
	vertical-align: middle;
	display: inline-block;
	text-align: center;
	margin: 20rpx 30rpx;
}
.good-info{
	flex: 4
}
.good-info{
	width: 100%
}
.goodname{
	margin-right: 30rpx;
	margin-top: 15rpx;
	font-size: 28rpx;
	color: #434343;
	overflow:hidden; 
	text-overflow:ellipsis;
	display:-webkit-box; 
	-webkit-box-orient:vertical;
	-webkit-line-clamp:2; 
}
.guige{
	color: #a1a1a1;
	font-size: 28rpx;
	line-height: 60rpx;
	display: flex;
	margin-right: 30rpx;
}
.goodnum{
	flex: 1;
	text-align: right;
}
.guigename{
	flex: 1
}
.price-edit{
	display: flex;
	margin-right: 30rpx;
}
.price{
	color: #e7242a;
	font-size: 32rpx;
	font-weight: bold;
	flex: 1
}
.edit{
	color: #a1a1a1;
	font-size: 28rpx;
	flex: 1;
	text-align: right;
}



.submit{
	width: 100%;
	height: 100rpx;
	position: fixed;
	bottom: 0;
	right: 0;
	left: 0;
	display: flex;
	text-align: center
}
.submit-price{
	flex: 1;
	line-height: 100rpx;
	font-size: 40rpx;
	background: #f2f2f2
}
.submit-price text{
	color: #e7242a
}
.submit-btn{
	flex: 1;
	line-height: 100rpx;
	font-size: 40rpx;
	background: #e7242a;
	color: white;
}


.coupon{
	display: none
}


