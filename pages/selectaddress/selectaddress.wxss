	width: 100%;
	display: flex;
	border-bottom: 10rpx solid #f2f2f2;
	/* margin-bottom: 120rpx; */
}
.selimage{
	flex: 1;
	text-align: center;
	  position: relative  
}
.selimage image{
	width: 30rpx;
	height: 30rpx;
	
	 position: absolute;
	left: 40% ;
	top: 36%; 
	
}
.adderss-info{
	flex: 5;
	margin-right: 30rpx;
}
.detailed{
	font-size: 28rpx;
	color: #434343;

}
.consignee{
	display: flex;
	margin: 30rpx 0;
	
}
.name{
	flex: 1;
	font-size: 28rpx;
	color: #434343;
}
.telphone{
	flex: 1;
	font-size: 28rpx;
	color: #434343;
}
