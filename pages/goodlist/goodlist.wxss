/* pages/goodlist/goodlist.wxss */
.produce-detail{
	width: 49%;
	float: left;
	height: 520rpx;
	margin: 10rpx 0.5%;
	background: white;
	font-size: 26rpx;
}
.produce-detail image{
	margin: 0 auto;
	width: 100%;
	display: block;
	height: 370rpx;
}
.produce-text{
	width: 100%
}
.produce-name{
	overflow:hidden; 
	text-overflow:ellipsis;
	display:-webkit-box; 
	-webkit-box-orient:vertical;
	-webkit-line-clamp:2; 
	color: #434343;
	margin: 10rpx 10rpx;
	height: 80rpx;
}
.produce-info{
	width: 100%;
	display: flex
}
.produce-price{
	color: #e7242a;
	font-weight: bold;
	flex: 1
}
.produce-pay{
	flex: 1;
	text-align: right;
	margin-right: 10rpx;
	color: #a1a1a1
}