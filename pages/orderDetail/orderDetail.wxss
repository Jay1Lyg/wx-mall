.locationMsg{
  font-size:28rpx;
  color:#434343;
  overflow:hidden;
  padding:0 30rpx;
  box-sizing: border-box;
  border-bottom:10rpx solid #f2f2f2;
}
.locationMsg image{
  width:44rpx;
  height:46rpx;
  margin-right:30rpx;
  margin-top:50rpx;
}
.locationMsg image,
.locationMsg .detailMsg{
  float:left;
}
.locationMsg .detailMsg{
  margin-top:30rpx;
  width:600rpx;
}
.locationMsg .detailMsg text{
  line-height:40px;
}
.wuliuDetail{
  position:relative;
}
.wuliuDetail,
.leaveDetail{
  overflow:hidden;
  padding:0 30rpx;
  box-sizing: border-box;
  color:#666;
  border-bottom:10rpx solid #f2f2f2;
}
.wuliuDetail image{
  width:46rpx;
  height:38rpx;
  margin-right:30rpx;
  margin-top:50rpx;
}
.wuliuDetail .wuliuMsg{
  font-size:28rpx;
  width:570rpx;
  margin-top:30rpx;  
}
.wuliuDetail image,
.wuliuDetail .wuliuMsg,
.leaveDetail image,
.leaveDetail .leaveMsg{
  float:left;
}
.wuliuTime{
  margin-left:350rpx;
  margin-top:20rpx;
  font-size:24rpx;
  color:#666; 
}
.leaveDetail image{
  width:40rpx;
  height:33rpx;
  margin-right:30rpx;
  margin-top:50rpx;
}
.leaveMsg {
  font-size:28rpx;
  width:600rpx;
  min-height:100rpx;
  margin-top:30rpx;
}
.waitMsg{
  font-size:28rpx;
  margin-top:30rpx;
}
.waitImg{
  width:30rpx;
  height:26rpx;
  overflow:hidden;
  margin-right:10rpx;
}
.gray{
  color:#999;
}
.red{
  color:red;
}
.waitDetail{
  padding:30rpx 30rpx 10rpx 30rpx;
  overflow:hidden;
  box-sizing: border-box;
  border-bottom:1px solid #ddd;
	width: 100%
}
.detailImg{
  width:162rpx;
  height:162rpx;
  border-radius:10rpx;
  margin-right:30rpx;
}
.detailImg,
.detailMsg{
  float:left;
}
.detailMsg{
  width:490rpx;
}
.orderDetail{
  padding:30rpx 30rpx 0 30rpx;
  box-sizing: border-box;
  line-height:40rpx;
  margin-bottom:150rpx;
}
.copy{
  font-size:20rpx;
  color:red;
  padding:5rpx;
  margin-left:20rpx;
  border:1rpx solid red;
  border-radius:8rpx;
}
.footer{
  width:750rpx;
  height:100rpx;
  overflow:hidden;
  position:fixed;
  bottom:0;
  background:#fff;
  border-top:1rpx solid #ddd;
}
.quitMoney{
  width:100rpx;
  height:60rpx;
  margin:0 20rpx 0 280rpx;
}
.quitMoney,.remindShop,.longShop{
  float:left;
  display:inline-block;
  border:1px solid #ddd;
   font-size:26rpx;
  border-radius:8rpx;
  line-height:60rpx;
  text-align:center;
  color:#999;
  margin-top:20rpx;
}
.remindShop,.longShop{
  width:140rpx;
  height:60rpx;  
  color:red;
}
.remindShop{
  border:1px solid red;
}
.longShop{
  margin-right:20rpx;
	margin-left: 50%
}
.wuliuDetail .sanjiao{
  position:absolute;
  width:18rpx;
  height:18rpx;
  bottom:60rpx;
  right:0rpx;
  
}