<!--规格  -->
<view class="{{specification?'':'specification'}} canshu">
	<view style='height:880rpx'>
		<view class='pro-info'>
			<view class='pro-image'>
				<image src='{{initial.image}}'></image>
			</view>
			<view class='pro-num'>
				<text class='pro-price'>￥{{initial.price}}</text>
				<text class='pro-oldprice'>￥{{initial.Originalprice}}</text>
				<text class='pro-stock'>库存：{{initial.surplus}}</text>
			</view>
		</view>
		<view class='specification-detail'>
			<text class='specification-detail-text'>口味</text>
			<view class='specification-detailes' >
				<text wx:for='{{productspecification}}'  data-id='{{item.id}}' data-active='{{item.active}}' class="specification-detailes-text {{item.active? 'specification-detailes-text-red' : '' }}" bindtap='selectpecification'>{{item.name}}</text>
			</view>
		</view>
		<view class='buy-num'>
			<text  class='specification-detail-text'>数量</text>
			<view class='add-sub'>
				<text class='add' bindtap='sub'>-</text>
				<text class='number'>{{buynumber}}</text>
				<text class='sub' bindtap='add'>+</text>
			</view>
		</view>
	</view>
	<button type='warn' bindtap='buysure'>确定购买</button>
</view>
