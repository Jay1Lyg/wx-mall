/* pages/shoppingcart/shoppingcart.wxss */
.goodList-info{
	width: 100%;
	display: flex;
	height: 100rpx;
	border-bottom: 1rpx solid #f2f2f2;
	
}
.goods-num{
	flex: 2;
	margin-left: 30rpx;
}
.goods-num text{
	line-height: 100rpx;
	color: #a1a1a1;
	font-size: 30rpx;
}
.goodsallselect{
	flex: 3;
	text-align: right;
	margin-right: 84rpx;
}
.goodsallselect text{
	line-height: 100rpx;
	color: #a1a1a1;
	font-size: 30rpx;
	margin-left: 10rpx;
}
.goodsallselect image{
	width: 30rpx;
	height: 30rpx;
	vertical-align: middle;
}
.goodsdeletd{
	flex: 1
}
.goodsdeletd text{
	line-height: 100rpx;
	color: #a1a1a1;
	font-size: 30rpx
}
.allselect{
	display: none
}


.goodslist{
	width: 100%;
	height: 200rpx;
	display: flex;
	border-bottom: 1px solid #f2f2f2
}
.goodslist-sel{
	flex: 1;
	height: 200rpx;
  vertical-align: middle;
}
.goodslist-sel image{
	line-height: 200rpx;
	width: 30rpx;
	height: 30rpx;
	margin-left: 30rpx;
	margin-top: 85rpx;
	
}
.goodslist-image{
	flex: 2;
}
.goodslist-image image{
	width: 160rpx;
	height: 160rpx;
	vertical-align: middle;
	display: inline-block;
	text-align: center;
	margin-top: 20rpx
}
.good-info{
	flex: 4
}
.good-info{
	width: 100%
}
.goodname{
	margin-right: 30rpx;
	margin-top: 15rpx;
	font-size: 28rpx;
	color: #434343;
	overflow:hidden; 
	text-overflow:ellipsis;
	display:-webkit-box; 
	-webkit-box-orient:vertical;
	-webkit-line-clamp:2; 
}
.guige{
	color: #a1a1a1;
	font-size: 28rpx;
	line-height: 60rpx;
	display: flex;
	margin-right: 30rpx;
}
.goodnum{
	flex: 1;
	text-align: right;
}
.guigename{
	flex: 1
}
.price-edit{
	display: flex;
	margin-right: 30rpx;
}
.price{
	color: #e7242a;
	font-size: 32rpx;
	font-weight: bold;
	flex: 1
}
.edit{
	color: #a1a1a1;
	font-size: 28rpx;
	flex: 1;
	text-align: right;
}


.active{
	display: none
}


.submit{
	width: 100%;
	height: 100rpx;
	position: fixed;
	bottom: 0;
	right: 0;
	left: 0;
	display: flex;
	text-align: center
}
.submit-price{
	flex: 1;
	line-height: 100rpx;
	font-size: 40rpx;
	background: #f2f2f2
}
.submit-price text{
	color: #e7242a
}
.submit-btn{
	flex: 1;
	line-height: 100rpx;
	font-size: 40rpx;
	background: #e7242a;
	color: white;
}

.canshu{
	width: 95%;
	height: 980rpx;
	background: white;
	z-index: 20;
	position: fixed;
	bottom: 0rpx;
	left: 2.5%;
	right: 2.5%;
	border-radius: 10rpx;

}
.quxiao{
	width: 50rpx;
	height: 50rpx;
	position: absolute;
	right: 30rpx;
	top: 10rpx;
}
.canshu-detail{
		display: flex;
		border-bottom: 1px solid #f2f2f2;
}
.canshuname{
	flex: 1;
	color: #434343;
	font-size: 30rpx;
	line-height: 90rpx;
	text-align: center
}
.description{
	flex: 4;
	color: #a1a1a1;
	font-size: 30rpx;
	line-height: 90rpx
}
/*规格  */

.specification{
	display: none
}
.addcart{
	display: none
}
.pro-info{
	display: flex;
}
.pro-image{
	flex: 1
}
.pro-image image{
	width: 170rpx;
	height: 170rpx;
	margin: 30rpx 0 0 30rpx;
	border-radius: 10rpx;
}
.pro-num{
	flex: 2
}
.pro-price{
	font-size: 40rpx;
	line-height: 130rpx;
	color: #e7242a;
	margin-right: 10rpx;
}
.pro-oldprice{
	text-decoration: line-through;
	font-size: 28rpx;
	color: #a1a1a1;
}
.pro-stock{
  display: block;
	font-size: 28rpx;
	color: #a1a1a1;
}
.specification-detail{
	width: 100%;
	margin: 30rpx;
}
.specification-detail-text{
	font-size: 30rpx;
	color: #434343;
}
.specification-detailes-text{
	font-size: 30rpx;
	width: 20%;
	color: #434343;
	float: left;
	height: 60rpx;
	border: 1px solid #d7d7d7;
	padding: 0 20rpx;
	text-align: center;
	line-height: 60rpx;
	border-radius: 10rpx;
	margin:30rpx 4% 0 0;
}
.specification-detailes-text-red{
	border:1px solid #e7242a;
	color: #e7242a;
}
/*购买数量  */
.buy-num{
	clear: both;
	margin: 30rpx;
}
.add{
	float: left;
	width: 120rpx;
	height: 60rpx;
	line-height: 60rpx;
	border: 1px solid #d7d7d7;
	border-bottom-left-radius: 10rpx;
	border-top-left-radius: 10rpx;
	text-align: center
}
.number{
	float: left;
	width: 120rpx;
	height: 60rpx;
	border: 1px solid #d7d7d7;
	text-align: center;
	font-size: 30rpx;
	line-height: 60rpx;
}
.sub{
	float: left;
	width: 120rpx;
	height: 60rpx;
	line-height: 60rpx;
	border: 1px solid #d7d7d7;
	border-bottom-right-radius: 10rpx;
	border-top-right-radius: 10rpx;
	text-align: center
}


.overfy{
	position: fixed;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	background: black;
	opacity: 0.5;
	z-index: 15;

}

.can-display{
	display: none
}