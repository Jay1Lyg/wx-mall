/* pages/shoppingcart/shoppingcart.wxss */
.goodList-info{
	width: 100%;
	display: flex;
	height: 100rpx;
	border-bottom: 1rpx solid #f2f2f2;
	
}
.goods-num{
	flex: 2;
	margin-left: 30rpx;
}
.goods-num text{
	line-height: 100rpx;
	color: #a1a1a1;
	font-size: 30rpx;
}
.goodsallselect{
	flex: 3;
	text-align: right;
	margin-right: 84rpx;
}
.goodsallselect text{
	line-height: 100rpx;
	color: #a1a1a1;
	font-size: 30rpx;
	margin-left: 10rpx;
}
.goodsallselect image{
	width: 30rpx;
	height: 30rpx;
	vertical-align: middle;
}
.goodsdeletd{
	flex: 1
}
.goodsdeletd text{
	line-height: 100rpx;
	color: #a1a1a1;
	font-size: 30rpx
}
.allselect{
	display: none
}


.goodslist{
	width: 100%;
	height: 200rpx;
	display: flex;
	border-bottom: 1px solid #f2f2f2
}
.goodslist-sel{
	flex: 1;
	height: 200rpx;
  vertical-align: middle;
}
.goodslist-sel image{
	line-height: 200rpx;
	width: 30rpx;
	height: 30rpx;
	margin-left: 30rpx;
	margin-top: 85rpx;
}
.goodslist-image{
	flex: 2;
}
.goodslist-image image{
	width: 160rpx;
	height: 160rpx;
	vertical-align: middle;
	display: inline-block;
	text-align: center;
	margin-top: 20rpx
}
.good-info{
	flex: 4
}
.good-info{
	width: 100%
}
.goodname{
	margin-right: 30rpx;
	margin-top: 15rpx;
	font-size: 28rpx;
	color: #434343;
	overflow:hidden; 
	text-overflow:ellipsis;
	display:-webkit-box; 
	-webkit-box-orient:vertical;
	-webkit-line-clamp:2; 
}
.guige{
	color: #a1a1a1;
	font-size: 28rpx;
	line-height: 60rpx;
	display: flex;
	margin-right: 30rpx;
}
.goodnum{
	flex: 1;
	text-align: right;
}
.guigename{
	flex: 1
}
.price-edit{
	display: flex;
	margin-right: 30rpx;
}
.price{
	color: #e7242a;
	font-size: 32rpx;
	font-weight: bold;
	flex: 1
}
.edit{
	color: #a1a1a1;
	font-size: 28rpx;
	flex: 1;
	text-align: right;
}


.active{
	display: none
}


.submit{
	width: 100%;
	height: 100rpx;
	position: fixed;
	bottom: 0;
	right: 0;
	left: 0;
	display: flex;
	text-align: center
}
.submit-price{
	flex: 1;
	line-height: 100rpx;
	font-size: 40rpx;
	background: #f2f2f2
}
.submit-price text{
	color: #e7242a
}
.submit-btn{
	flex: 1;
	line-height: 100rpx;
	font-size: 40rpx;
	background: #e7242a;
	color: white;
}