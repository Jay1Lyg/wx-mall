<view class='userinfo'>
	<image src='{{userInfo.avatarUrl}}'></image>
	<text>{{userInfo.nickName}}</text>
</view>
<view class='order'>
	<view class="order-detail {{item.active?'active':''}}" wx:for='{{order}}' bindtap='order' data-index='{{item.id}}'>
		<image src='{{item.image}}'></image>
		<text class=''>{{item.text}}</text>
	</view>
</view>
<view class='card' bindtap='card'>
	<view class='card-image'>
		<image src='../../image/youhui.png'></image>
	</view>
	<text class='card-text'>优惠卡券</text>
	<text class='card-right'>></text>
</view>
<view class='card' bindtap='address'>
	<view class='card-image'>
		<image src='../../image/dizhi.png'></image>
	</view>
	<text class='card-text'>收货地址</text>
	<text class='card-right'>></text>
</view>
